#include <cstdio>

template <typename T, size_t ROWS, size_t COLS>
void sumMatrices(const T (&a)[ROWS][COLS],   
                const T (&b)[ROWS][COLS],    
                T (&result)[ROWS][COLS])    
{
    for(size_t i = 0; i < ROWS; ++i) 
    
    {
        for(size_t j = 0; j < COLS; ++j)
{
            result[i][j] = a[i][j] + b[i][j];
        }
    }
}

int main() 
{
    int matrix1[5][5] = {/* ... */};
    int matrix2[5][5] = {/* ... */};
    int result[5][5];
    
    sumMatrices<int, 5, 5>(matrix1, matrix2, result);
    
    // Вывод результата
    
    return 0;
}

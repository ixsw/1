#include <cstdio>   
#include <cstdlib>  
#include <ctime>    

int main()
{
    const int SIZE = 10000;  
    int arr[SIZE];          
    
    srand(time(0));

    for (int i = 0; i < SIZE; i++)
    {
        arr[i] = rand() % 201 - 100;  
    }

  
    int sum = 0;
    for (int i = 0; i < SIZE; i++) 
    {
        sum += arr[i];
    }
    double average = (double)sum / SIZE;


    int target;
    printf("Введите число от -100 до 100: ");
    scanf("%d", &target);

    int count = 0;
    for (int i = 0; i < SIZE; i++) 
    {
        if (arr[i] == target)
        {
            count++;
        }
    }

    printf("Среднее арифметическое: %.2f\n", average);
    printf("Число %d встречается %d раз(а).\n", target, count);

    return 0;
}
